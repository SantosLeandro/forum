{% extends "./base.html.twig" %}


{% block title %}Sign In{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block body %}
    <h1>Login</h1>
    {% if message is defined %}
    <h3> {{ message }} </h3>
    {% endif %}
    <div>
        <form class="form-login" action="/login" method="POST">
            <input type="hidden" name="token" value="{{ csrf_token('login') }}"/
            <div>
                <label for="">Email</label><br>
                <input id="" type="email" name="_username">
            </div>
            <div>
                <label for="">Password</label><br>
                <input id="" type="password" name="_password">
            </div>
            <div>
                <input type="submit" value="Submit">
            </div>
        </form>
    </div>
{% endblock %}
