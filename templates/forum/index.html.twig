{% extends "./base.html.twig" %}


{% block title %}Topics -  {% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block body %}
    {% for topic in topics %}
        <p> <a href="/topic/{{topic.id}}"> {{ topic.title }} </a> </p>
        <span>Autor: {{ topic.getUser.username }} | criado: {{ topic.getCreatedAt|date('Y-m-d H:m')}}</span>
        <hr>
    {% endfor %}
    {% if app.user %}
        <form class="form-login" action="">
            <input type="text">
            <textarea id="" name="" cols="30" rows="10"></textarea>
            <input type="submit" value="Enviar">
        </form>
    {% endif %}
{% endblock %}
