{% extends "./base.html.twig" %}


{% block title %}Topics -  {% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block body %}

    <a href="/">Home </a> > <a href="/forum/{{ topics[0].getForum.getId }}"> {{ topics[0].getForum.getTitle }} </a>
    {% for topic in topics %}
    <div class="topic-item">
        <div>
            <p> <a href="/topic/{{topic.id}}"> {{ topic.title }} </a> </p>
        </div>
        <div>
            <span>Autor: {{ topic.getUser.username }} </span>
        </div>
        <div>
          <span> ultima msg: {{ topic.getUpdatedAt|date('Y-m-d H:i')}} {{ topic.getLastPost.getUser.username }} </span>
        </div>
    </div>
    <hr>
    {% endfor %}
    {% if app.user %}
        <form class="form" action="/topic.store" method="POST">
            <div>
            <h5> Novo TÃ³pico </h5>
            <input type="hidden" name="token" value="{{ csrf_token('topic.store') }}"/>
            <input type="hidden" name="forum_id" value={{ forum_id }} />
            <input type="text" name="title">
            </div>
            <div>
            <textarea id="" name="content" cols="30" rows="10"></textarea>
            </div>
            <div>
            <input type="submit" value="Enviar">
            </div>
        </form>
    {% endif %}
{% endblock %}
